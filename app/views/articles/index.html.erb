<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<% @articles.each do |article| %>
  <h2><%= article.title %></h2>
  <section>
     <article>
      <%= article.body.html_safe %>
    </article>
  </section>
  <section>
    <h3>Comments:</h3>
    <%= render article.comments %>
  </section>
<% end %>
